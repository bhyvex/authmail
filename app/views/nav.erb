<% if current_user %>
<div class="navbar navbar-static-top navbar-inverse">
  <div class="container">
    <a href="/dashboard" class="navbar-brand">AuthMail</a>

    <ul class="nav navbar-nav">
      <li>
        <a href="/dashboard">Your Apps</a>
      </li>
    </ul>

    <ul class="nav navbar-nav navbar-right">
      <li><a href="/logout">Logout (<%= current_user %>)</a></li>
    </ul>
  </div>
</div>
<% elsif !@skip_header %>
<nav class="navbar navbar-inverse" role="navigation">
  <div class="container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <a class="navbar-brand" href="/">AuthMail</a>
    
    <ul class="nav navbar-nav navbar-left">
      <li><a href="/faq">FAQ</a></li>
      <li><a href="/docs">Documentation</a></li>
      <li><a href="/support">Support</a></li>
    </ul>
    
    <form class="navbar-form navbar-right" method="post" action="/login" id="navbar-login-form">
      <input type="hidden" name="client_id" value="<%= Account.master.id %>">
      <div class="form-group">
        <input type="email" name="email" class="form-control" placeholder="you@example.com">
      </div>
      <button type="submit" class="btn btn-default">Login</button>
    </form>
    <script>
        mixpanel.track_forms('#navbar-login-form', 'Initiated Login', {location: 'Navbar'});
    </script>
  </div>
</nav>
<% end %>